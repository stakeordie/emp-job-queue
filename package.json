{
  "name": "emp-ai-backend",
  "version": "1.0.0",
  "description": "EmProps AI Backend - Distributed AI workload orchestration with specialized machine pools",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm env:build --profile=full-local && turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "env:build": "node scripts/env/build-env.js",
    "env:switch": "node scripts/env/switch-env.js",
    "env:validate": "node scripts/env/validate-env.js",
    "env:list": "node scripts/env/list-profiles.js",
    "run-profile": "node scripts/env/profile-runner.js",
    "run-profile:debug": "DEBUG_MODE=true node scripts/env/profile-runner.js",
    "run-service": "node scripts/env/service-runner.js",
    "profiles": "node scripts/env/list-profiles.js",
    "dev:api": "turbo run dev --filter=api",
    "dev:worker": "turbo run dev --filter=worker",
    "dev:worker:local": "./scripts/dev-worker-local.sh",
    "dev:monitor": "turbo run dev --filter=monitor",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:local-redis": "./scripts/dev-local-redis.sh",
    "dev:local-redis:stop": "brew services stop redis",
    "shutdown": "./scripts/shutdown-all.sh",
    "setup:developer": "pnpm install && pnpm dev:local-redis",
    "dev:all": "pnpm dev",
    "logs": "node scripts/log-viewer.js",
    "logs:redis": "./scripts/redis-monitor-filtered.sh",
    "env:show": "node scripts/show-service-env.js",
    "machine:up": "cd apps/machine && ./generate-docker-compose.sh && docker compose --env-file .env up",
    "machine:up:build": "pnpm machine:down && ./scripts/bundle-worker.sh && cd apps/machine && pnpm build:workspace-packages && ./generate-docker-compose.sh && docker compose --env-file .env up --build",
    "machine:up:build:fresh": "pnpm machine:down && ./scripts/bundle-worker.sh && cd apps/machine && pnpm build:workspace-packages && ./generate-docker-compose.sh && CACHE_BUST=$(date +%s) docker compose --env-file .env build --no-cache && docker compose --env-file .env up",
    "machine:down": "cd apps/machine && docker compose --env-file .env down",
    "machine:build": "cd apps/machine && pnpm docker:build:version",
    "machine:logs": "cd apps/machine && docker compose --env-file .env logs -f",
    "machine:status": "curl -s http://localhost:9092/health | jq || echo '❌ Health check failed'",
    "machine:push": ""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.25.6",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "playwright": "^1.53.2",
    "prettier": "^3.6.2",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools"
  ],
  "dependencies": {
    "chalk": "^5.4.1"
  }
}