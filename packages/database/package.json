{
  "name": "@emp/database",
  "version": "1.0.0",
  "description": "Database package with Prisma client for EmProps job queue system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && prisma generate && tsc && cp -r src/generated dist/",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "prisma:env": "node scripts/prisma-env.js",
    "prisma:local": "node scripts/prisma-env.js --env local-dev",
    "prisma:test": "node scripts/prisma-env.js --env test",
    "prisma:prod": "node scripts/prisma-env.js --env production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test:connection": "tsx src/test-connection.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "prisma": "^5.21.1",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client": {
      "import": "./dist/client.js",
      "require": "./dist/client.js"
    }
  }
}