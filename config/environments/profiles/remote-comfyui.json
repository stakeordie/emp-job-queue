{
  "name": "Remote ComfyUI",
  "description": "Local worker connecting to a remote ComfyUI server",
  "components": {
    "redis": "local",
    "api": "local",
    "machine": "remote-comfyui",
    "monitor": "local",
    "comfy": "local"
  },
  "secrets": [
    "REMOTE_COMFYUI_HOST",
    "REMOTE_COMFYUI_PORT",
    "REMOTE_COMFYUI_USERNAME",
    "REMOTE_COMFYUI_PASSWORD"
  ],
  "validation": {
    "required_services": ["redis"],
    "network_access": ["${REMOTE_COMFYUI_HOST}"],
    "warnings": ["This profile connects to a remote ComfyUI server - ensure network connectivity"]
  }
}