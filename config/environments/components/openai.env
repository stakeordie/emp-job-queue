NAMESPACE=OPENAI

[default]
# Worker Configuration
WORKERS=openai:5

# OpenAI API Configuration
BASE_URL=https://api.openai.com/v1
TIMEOUT_SECONDS=120
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
HEALTH_CHECK_INTERVAL=120

# Text Generation Configuration
TEXT_MODEL=gpt-4o-mini
MAX_TOKENS=4000
TEMPERATURE=0.7
TEXT_MAX_CONCURRENT_JOBS=1

# Image Generation Configuration
IMAGE_MODEL=gpt-4.1
IMAGE_SIZE=1024x1024
IMAGE_QUALITY=standard
IMAGE_MAX_CONCURRENT_JOBS=1

# Service Discovery
SERVICE_TYPE=openai
SERVICE_NAME=OpenAI API Services
SERVICE_DESCRIPTION=OpenAI text and image generation services

# Resource Configuration
RESOURCE_BINDING=shared
BUILD_STAGE=base

# Machine Configuration
MACHINE_TYPE=api

# Logging
LOG_LEVEL=info
DEBUG_CONNECTORS=false

[local]
API_KEY=${OPENAI_API_KEY_DEV}

[production]
API_KEY=${OPENAI_API_KEY_DEV}