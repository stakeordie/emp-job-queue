# Machine component configurations
[local]
MACHINE_ID=local-dev-machine
MACHINE_HOST=localhost
HEALTH_PORT=9090
TEST_MODE=true
NUM_GPUS=1
GPU_MEMORY_GB=16
GPU_MODEL="Simulated RTX 4090"
COMFYUI_INSTALL_CUSTOM_NODES=true
CONTAINER_NAME=basic-machine-local
WORKER_ID_PREFIX=basic-machine
WORKER_CONNECTORS=simulation,comfyui,a1111
ENABLE_REDIS_WORKERS=true
ENABLE_NGINX=true
ENABLE_COMFYUI=false
ENABLE_A1111=false
ENABLE_OLLAMA=false
EXPOSED_PORTS=9092,3002,3190
LOG_LEVEL=info
# ComfyUI Connector Settings (connects to local ComfyUI by default)
WORKER_COMFYUI_HOST=localhost
WORKER_COMFYUI_PORT=8188
WORKER_COMFYUI_TIMEOUT_SECONDS=300
WORKER_COMFYUI_MAX_CONCURRENT_JOBS=1

