# Webhook Service component configurations
NAMESPACE=WEBHOOK_SERVICE

[default]
LOG_LEVEL=info
WEBHOOK_TIMEOUT_MS=30000
MAX_RETRY_ATTEMPTS=3
INITIAL_RETRY_DELAY_MS=1000
MAX_RETRY_DELAY_MS=30000
DELIVERY_QUEUE_SIZE=1000
CACHE_REFRESH_INTERVAL_MS=30000

[local]
HOST=0.0.0.0
PORT=3332
URL=http://${HOST}:${PORT}
CORS_ORIGINS=http://localhost:3333,http://localhost:3331,http://localhost:3001

[production]
HOST=0.0.0.0
PORT=3332
URL=https://webhook-service-production.railway.app
CORS_ORIGINS=https://qmonitor.emerge.pizza,https://qredapi.emerge.pizza

[prod-test]
HOST=0.0.0.0
PORT=3332
URL=http://${HOST}:${PORT}
CORS_ORIGINS=http://localhost:3333,http://localhost:3331,http://localhost:3001
LOG_LEVEL=debug
WEBHOOK_TIMEOUT_MS=15000
MAX_RETRY_ATTEMPTS=2