{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "paths": {
      "@app/types/*": ["types/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": [
    "dist",
    "node_modules", 
    "src/**/*.test.ts"
  ],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/database" }
  ]
}
