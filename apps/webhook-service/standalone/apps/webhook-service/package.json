{
  "name": "webhook-service",
  "version": "1.0.0",
  "description": "EMP Job Queue Webhook Service - HTTP notification delivery system",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "deploy": "turbo build --filter=webhook-service --output-mode=standalone --output-dir=standalone"
  },
  "dependencies": {
    "@emp/core": "workspace:*",
    "express": "^4.21.2",
    "ioredis": "^5.4.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "webhook",
    "notifications",
    "http",
    "redis",
    "microservice"
  ]
}