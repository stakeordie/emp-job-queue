# Fast development Dockerfile - optimized for iteration
FROM pytorch/pytorch:2.7.0-cuda12.8-cudnn9-runtime

# Cache system dependencies (changes rarely)
RUN apt-get update --allow-releaseinfo-change && \
    apt-get install -y ca-certificates gnupg curl git && \
    curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g pnpm pm2 && \
    pip3 install nvidia-ml-py3 gpustat py3nvml psutil

# Create working directory
WORKDIR /app

# Copy only package files first (for dependency caching)
COPY package*.json ./
RUN pnpm install

# Copy source code (this layer changes frequently)
COPY . .

# Development entrypoint that allows easy iteration
CMD ["bash", "-c", "echo 'Dev container ready. Run: node src/index-pm2.js' && bash"]