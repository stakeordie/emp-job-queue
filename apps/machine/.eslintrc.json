{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "globals": {
    "beforeEach": "readonly",
    "afterEach": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "expect": "readonly",
    "vi": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "error",
    "no-duplicate-imports": "error",
    "no-unused-expressions": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-case-declarations": "off",
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_"
    }]
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "coverage/",
    "data/",
    "tests/"
  ]
}