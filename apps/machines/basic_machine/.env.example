# GPU Configuration
NUM_GPUS=1
GPU_MEMORY_GB=16
GPU_MODEL=RTX 4090

# Redis Configuration
HUB_REDIS_URL=redis://default:password@host:port
WORKER_WEBSOCKET_AUTH_TOKEN=your-auth-token

# Worker Configuration
WORKER_ID_PREFIX=basic-machine
WORKER_CONNECTORS=simulation,comfyui,a1111

# Service Ports (base ports, will increment per GPU)
COMFYUI_BASE_PORT=8188
A1111_BASE_PORT=3001

# Service Configuration
ENABLE_NGINX=true
ENABLE_COMFYUI=true
ENABLE_A1111=true
ENABLE_REDIS_WORKERS=true
ENABLE_OLLAMA=true

# Ollama Configuration
OLLAMA_MODELS=llama3

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Cloud Storage (for model downloads)
CLOUD_PROVIDER=azure
AZURE_STORAGE_ACCOUNT=your-account
AZURE_STORAGE_KEY=your-key
CLOUD_MODELS_CONTAINER=models
SKIP_MODEL_DOWNLOAD=false