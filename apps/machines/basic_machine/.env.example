# Basic Machine Environment Configuration
# Copy this file to .env.local.dev or .env.local.prod and update values

# Machine identification
CONTAINER_NAME=basic-machine
MACHINE_ID=${CONTAINER_NAME}

# Test mode - set to true to simulate GPUs
TEST_MODE=false

# GPU configuration
NUM_GPUS=1
GPU_MEMORY_GB=16
GPU_MODEL="NVIDIA RTX 4090"

# Hub connection
HUB_REDIS_URL=redis://localhost:6379
WORKER_WEBSOCKET_AUTH_TOKEN=your-auth-token-here

# Worker configuration
WORKER_ID_PREFIX=worker
WORKER_CONNECTORS=simulation,comfyui,a1111
ENABLE_REDIS_WORKERS=true

# For production - download from GitHub releases (default)
# WORKER_DOWNLOAD_URL=https://github.com/stakeordie/emp-job-queue/releases/latest/download/emp-job-queue-worker.tar.gz

# For development - use local worker build
# WORKER_LOCAL_PATH=/path/to/emp-job-queue/apps/worker/dist

# ComfyUI Configuration (stakeordie fork with WebSocket support)
COMFYUI_REPO_URL=https://github.com/stakeordie/ComfyUI.git
COMFYUI_BRANCH=forward
COMFYUI_COMMIT=
COMFYUI_CPU_MODE=false

# Service configuration
ENABLE_NGINX=true
ENABLE_COMFYUI=false
ENABLE_A1111=false
ENABLE_OLLAMA=false

# Port configuration
# Add multiple worker ports if running multiple workers
EXPOSED_PORTS=9090,3001,3002

# Logging
LOG_LEVEL=info

# Redis port (for dev profile)
REDIS_PORT=6379