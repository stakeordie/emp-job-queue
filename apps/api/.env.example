# Hub Service Configuration

# Redis connection
REDIS_URL=redis://localhost:6379

# API server
HUB_PORT=3001
HUB_HOST=0.0.0.0

# WebSocket server
WS_PORT=3002
WS_AUTH_TOKEN=your-secret-token-here

# Job processing
MAX_JOB_TIMEOUT_MINUTES=30
DEFAULT_JOB_PRIORITY=50
MAX_CONCURRENT_JOBS_PER_WORKER=3

# Queue management
MAX_PENDING_JOBS=10000
JOB_CLEANUP_INTERVAL_MINUTES=60
COMPLETED_JOB_TTL_HOURS=24
FAILED_JOB_TTL_DAYS=7

# Worker management
WORKER_HEARTBEAT_TIMEOUT_SECONDS=90
WORKER_CLEANUP_INTERVAL_MINUTES=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
STATS_BROADCAST_INTERVAL_MS=2000

# Security
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
NODE_ENV=production