{
  "name": "api",
  "version": "1.0.0",
  "description": "Lightweight API server for emp-ai-backend",
  "type": "module",
  "packageManager": "pnpm@10.12.4",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "emp-api": "dist/src/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "mkdir -p ../../logs && echo '   - Logs:         pnpm logs:api' && echo '   - All Logs:     pnpm logs:all' && tsx watch src/index.ts 2>&1 | tee ../../logs/api.log",
    "start": "node dist/src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts'",
    "lint:check": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts' --max-warnings 50",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "./scripts/build-with-version.sh",
    "docker:build:version": "./scripts/build-with-version.sh",
    "docker:build:push": "./scripts/build-with-version.sh latest emprops emp-ai-backend-api --push",
    "deploy": "./build-standalone.sh"
  },
  "dependencies": {
    "@emp/core": "workspace:*",
    "@emp/telemetry": "workspace:*",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventsource": "^2.0.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/node-fetch": "^2.6.11",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  }
}